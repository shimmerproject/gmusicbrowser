[shimmer]
Type=G
Title		= " "
DefaultFocus	= SimpleSearch
Default		= Window(size=1000x750)
Window		= hidden=SongTree|VPMosaic
Author		= simon@shimmerproject.org
### main window containers: top bar, main and statusbar ###
VBmain		= HBTop _HBMain HBStatusbar
HBMain		= VBArtist _HPRight
HBTop		= VBButtons _15VBPlayer 15VBToggle -5VBSearchBox
### top bar from left to right ###
HBButtons	= Prev Play Next
VBButtons	= HBButtons Filler4
VBPlayer	= HBTitle HBScale
HBTitle		= Title(minsize=0,markup="<big><b>%t</b></big>",click1="") AlbumBreadcrumb(tip="Album: %l (%Y)") ArtistBreadcrumb(tip="Artist: %a") -LabelTime(markup="%s / $length", initsize="XX:XX / -XX:XX")
HBScale		= _Scale
HBToggle	= TogButton0(relief=none,size=button,icon=list,widget=HBSongPlaylist,togglegroup=1) TogButton1(relief=none,size=button,icon=tree,widget=SongTree,togglegroup=1) TogButton2(relief=none,size=button,icon=mosaic,widget=VPMosaic,togglegroup=1)
VBToggle	= HBToggle _Filler1
VBSearchBox	= 2SimpleSearch _Filler2
### main left: artist pane and album-cover ###
VBArtist	= _FPane0(nb=1,hidebb=1,pages=artists,page_artists/lmarkup=1,hidetabs=1) HBCover
HBCover		= Cover(overlay=6x6:350x350:pix/elementary/overlay.png,default=pix/elementary/no-cover.svg,showcover=0)
### main right: list/tree/mosaic widgets ###
HPRight		= _HBSongListtree
HBSongListtree	= _SongTree(cols="playandqueue track title artist length playcount lastplay",colwidth="artist 124 lastplay 107 length 40 playandqueue 19 playcount 18 ratingpic 100 title 280 titleaa 397 track 21",grouping="album|artistalbum_left(picsize=100)|disc|discright(width=15)",follow=1,sort="year album disc track") _HBSongPlaylist _VPMosaic
HBSongPlaylist	= _SongList(cols="playandqueue track title artist album year length playcount",sort=artist,colwidth="album 200 artist 200 file 400 lastplay 100 length 41 path 413 playandqueue 20 playcount 96 rating 80 title 270 track 21 year 31",follow=1,sort="year album disc track")
VPMosaic	= _FPane1(nb=2,hidebb=1,pages=album,page_album/mode=mosaic,hidetabs=1)
### bottom: statusbar ###
HBStatusbar	= Pref(size=small-toolbar,button=0) Label0(text="Settings",click1=OpenPref) 15_HBSettings
HBSettings	= Queue Label1(markup="<small>Queue</small>",click1=OpenQueue,size=small-toolbar) 5Filler3  10Filter(with_text=1) 10Sort(with_text=1) 10LockAlbum(with_text=1) 10LockArtist(with_text=1) -Total(format=short,relief=none,button=0,mode=list)
### positioning and sizing ###
HSize0		= 10 Filler0 Filler1 Filler2 Filler5 Filler6 Filler7
HSize0		= 5 Filler3 Filler4
HSize0		= 350 VBArtist
VSize0		= 350 HBCover

